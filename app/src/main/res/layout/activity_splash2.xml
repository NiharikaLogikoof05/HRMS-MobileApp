<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp">

        <ImageView
            android:id="@+id/ivtrack"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:src="@drawable/trackleave" />

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_250sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/onbaord2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ivback">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="The workforce will be able to check their time off balances,"
                android:textColor="#34444d"
                android:textFontWeight="600"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="request for annual &amp; sick leave,and get approved in an"
                android:textColor="#34444d"
                android:textFontWeight="600"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="instance.Your staff will be able to use the essential HR tool"
                android:textColor="#34444d"
                android:textFontWeight="600"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="remotely or on the go to."
                android:textColor="#34444d"
                android:textFontWeight="600"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/ivact"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inactive" />
                <ImageView
                    android:id="@+id/ivdeact1"
                    android:layout_toRightOf="@id/ivact"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activetab"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <ImageView
                    android:id="@+id/ivdeact2"
                    android:layout_toRightOf="@id/ivdeact1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inactive"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/next2" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>